citHeader("To cite anota2seq in publications use:")

citEntry(entry = "Article",
         title        = "Generally applicable transcriptome-wide analysis of translation using anota2seq",
         author       = personList(as.person("Christian Oertlin"),
                                   as.person("Julie Lorent"),
                                   as.person("Carl Murie"),
                                   as.person("Luc Furic"),
                                   as.person("Ivan Topisirovic"),
                                   as.person("Ola Larsson")),
         journal      = "Nucleic Acids Research",
         year         = "2019",
         url          = "https://academic.oup.com/nar/article/47/12/e70/5423604", 
         doi = "10.1093/nar/gkz223",
         publisher = "Oxford Academic",
         
         textVersion  =
             paste("Oertlin C. et al. (2019).",
                   "Generally applicable transcriptome-wide analysis of translation using anota2seq",
                   "Nucleic Acids Research",
                   "URL https://academic.oup.com/nar/article/47/12/e70/5423604")
)